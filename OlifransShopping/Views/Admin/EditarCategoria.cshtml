@model OlifransShopping.DAL.Categoria

@{
    ViewBag.Title = "EditarCategoria";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}

<h2>EditarCategorias</h2>

<div class="container">

    @using (Html.BeginForm())
    {
        @Html.AntiForgeryToken()

        <div class="form-horizontal">
            <hr />
            @Html.ValidationSummary(true, "", new { @class = "text-danger" })
            @Html.HiddenFor(model => model.CategoriaId)

            <div class="form-group">
                @Html.LabelFor(model => model.CategoriaNome, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @Html.EditorFor(model => model.CategoriaNome, new { htmlAttributes = new { @class = "form-control" } })
                    @Html.ValidationMessageFor(model => model.CategoriaNome, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StatusAtivo, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.StatusAtivo, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.CheckBox("StatusAtivo")
                    @Html.ValidationMessageFor(model => model.StatusAtivo, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                @Html.LabelFor(model => model.StatusDelete, htmlAttributes: new { @class = "control-label col-md-2" })
                <div class="col-md-10">
                    @*@Html.EditorFor(model => model.StatusDelete, new { htmlAttributes = new { @class = "form-control" } })*@
                    @Html.CheckBox("StatusDelete")
                    @Html.ValidationMessageFor(model => model.StatusDelete, "", new { @class = "text-danger" })
                </div>
            </div>

            <div class="form-group">
                <div class="col-md-offset-2 col-md-10">
                    <input type="submit" value="Salvar" class="btn btn-primary" />
                </div>
            </div>
        </div>
    }

    <div>
        @Html.ActionLink("Voltar", "Index")
    </div>

</div>
